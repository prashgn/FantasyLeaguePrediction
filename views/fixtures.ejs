<%- include ('partials/header.ejs') %> <%- include ('partials/headerNav.ejs') %>
<div class="main-content">
    <div class="container-fluid h-100">
        <div class="card-deck h-100">
            <div class="card bg-dark my-3 shadow-lg">
                <div class="card-body d-flex flex-column text-center text-white">
                    <h4 class="card-title">
                        <a href="#" class="text-white">Fixtures</a>
                        <hr />
                    </h4>

                    <div class="card-text">
                        <table class="table text-white">
                            <thead class="thead-light">
                                <tr>
                                    <th>#</th>
                                    <th>Detail</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var match_data = data; %> <% for (var i = 0; i <
                                match_data.length; i++) { %>
                                <tr>
                                    <td>Match&nbsp;<%= match_data[i].matchnum %></td>
                                    <td>
                                        <%= match_data[i].teamA %> vs <%= match_data[i].teamB %>
                                        <br />
                                        <span style="font-size: 10px;">
                                            at <%= match_data[i].venue %> on <%= match_data[i].date
                                            %> &nbsp; <%= match_data[i].time %> <br />
                                           <%= match_data[i].seriesname %> <%=
                                            match_data[i].seriesyear %> 
                                        </span>
                                    </td>
                                    <td>
                                        <% if (match_data[i].completed == 1) { %>
                                        <a
                                            href="#"
                                            class="btn btn-info btn-sm"
                                            name="btnResult"
                                            data-toggle="modal"
                                            data-target="#modalResult"
                                            >Result</a
                                        >
                                        <% } else { %>
                                        <a
                                            href="#"
                                            class="btn btn-success btn-sm"
                                            name="btnPredict"
                                            data-toggle="modal"
                                            data-target="#modalPredict"
                                            >Predict</a
                                        >
                                        <% } %>
                                        <input
                                            type="hidden"
                                            name="match"
                                            value="<%= match_data[i].matchid %>"
                                        />
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ('partials/modalPrediction.ejs') %> <%- include ('partials/footer.ejs') %>
<script src="/assets/js/predictAjax.js"></script>
<%- include ('partials/end.ejs') %>