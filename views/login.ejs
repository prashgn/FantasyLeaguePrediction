<%- include ('partials/header.ejs') %> <%- include ('partials/headerNavShort.ejs') %>
<div class="main-content d-flex align-items-center justify-content-center">
    <div class="card col-md-4">
        <div class="card-body text-center">
            <form action="/login" method="post">
                <div class="mt-3">
                    <% if (message) { %>
                    <span class="alert alert-secondary"><%= message %></span>
                    <% } %>
                </div>
                <div class="mt-3">
                    <h4 class="font-weight-bold text-secondary">Login</h4>
                </div>
                <!--<div class="social-btn">
                    <a href="#" class="btn btn-primary btn-block mt-3">
                        <i class="fab fa-fw fa-facebook-f"></i> Sign in with <b>Facebook</b>
                    </a>
                    <div class="mt-3"><i>OR</i></div>
                    <a href="#" class="btn btn-danger btn-block mt-3">
                        <i class="fab fa-fw fa-google"></i> Sign in with <b>Google</b>
                    </a>
                </div>
                <div class="mt-3"><i>OR</i></div>-->
                <div class="form-group mt-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <span class="fa fa-user"></span>
                            </span>
                        </div>
                        <input
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            placeholder="Email"
                            required="required"
                        />
                    </div>
                </div>
                <div class="form-group mt-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>
                        <input
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            placeholder="Password"
                            required="required"
                        />
                    </div>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success btn-block">Sign in</button>
                </div>
            </form>
            <!--<div>
                <a href="#" class="text-primary">Forgot Password?</a>
            </div>-->
            <div class="hint-text">
                Don't have an account? <a href="/register" class="text-primary">Register Now!</a>
            </div>
        </div>
    </div>
</div>
<%- include ('partials/footer.ejs') %> <%- include ('partials/end.ejs') %>